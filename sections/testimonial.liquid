<h1>Testimonial</h1>

{%- style -%}

  .wrapper{
    width:100%;
    padding-top: 20px;
    text-align:center;
  }

  .carousel{
    width:90%;
    margin:0px auto;
  }
  .slick-slide{
    margin:10px;
  }
  .slick-slide img{
    width:100%;
    border: 2px solid #fff;
  }
  .wrapper .slick-dots li button:before {
    font-size:20px;
    color:#111;
  }
  .slick-next:before, .slick-prev:before{
    color:#111;
  }
{%- endstyle -%}

