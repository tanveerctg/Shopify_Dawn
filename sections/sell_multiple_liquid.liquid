{% schema %}
  {
    "name": "Sell Multiple Items",
    "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Container Image"
          },
          {
            "type": "select",
            "id": "image_ratio",
            "label": "Image Ratio",
            "options": [
              {
                "value": "16_9",
                "label": "16:9"
              },
              {
                "value": "9_16",
                "label": "9:16"
              }
            ],
            "default": "16_9"
          },
          {
            "type": "select",
            "id": "image_size",
            "label": "Image Size",
            "options": [
              {
                "value": "cover",
                "label": "Cover"
              },
              {
                "value": "contain",
                "label": "Contain"
              },
              {
                "value": "fill",
                "label": "Fill"
              },
              {
                "value": "scale-down",
                "label": "Scale Down"
              }
            ],
            "default": "cover"
          }
    ],
    "blocks": 
    [
      {
            "type": "product",
            "name": "Item",
            "settings":[
                  {
                      "type": "product",
                      "id": "product",
                      "label": "Link Product"
                  },
                  {
                    "type": "range",
                    "id": "vertical_position",
                    "min": 10,
                    "max": 100,
                    "step": 1,
                    "unit": "%",
                    "label": "Vertical Position",
                    "default":10
                  },
                  {
                    "type": "range",
                    "id": "horizontal_position",
                    "min": 10,
                    "max": 100,
                    "step": 1,
                    "unit": "%",
                    "label": "Horizontal Position",
                    "default":10
                  },
            ]
      } 
    ],
   "presets": [
    {
      "name": "Sell Multiple Items",
      "blocks": [
        {
          "type": "product"
        }
      ]
    }
  ]
  }
{% endschema %}